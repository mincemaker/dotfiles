autocmd LocationChange .* :fmapc
autocmd LocationChange reader\\.livedoor\\.com/reader :fmap! j J g k s a p o v c r <Space> <S-Space> z b < >
autocmd LocationChange localhost:3000/reader :fmap! j J k s g a p o v c r w <Space> <S-Space> z b < >
autocmd LocationChange 10\.0\.1\.[0-9]{1,3}:3000/reader :fmap! j J k s g a p o v c r w <Space> <S-Space> z b < >
autocmd LocationChange mail\\.google\\.com/mail :fmap! -depth 4 c / j k n p o u e x s r a # [ ] z ? gi gs gt gd ga gc
autocmd LocationChange http://.*\.tumblr\.com/ :fmap i,tj
autocmd LocationChange http://.*\.tumblr\.com/ :fmap e,tj

":javascript FirebugCommandLineAPI.prototype.vimperator = liberator

" Show feed-button to statusbar
:javascript <<EOM
(function(){
 var feedPanel = document.createElement('statusbarpanel');
 var feedButton = document.getElementById('feed-button');
 feedPanel.setAttribute('id','feed-panel-clone');
 feedPanel.appendChild(feedButton.cloneNode(true));
 feedButton.parentNode.removeChild(feedButton);
 document.getElementById('status-bar').insertBefore(feedPanel,document.getElementById('security-button'));
 })();
EOM

" disable accesskey
set! ui.key.generalAccessKey=0
